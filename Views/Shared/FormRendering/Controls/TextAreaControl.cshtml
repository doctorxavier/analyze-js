@using IDB.Presentation.MVC4.Services.Core.DynamicFormsHelper
@model IDB.MW.Application.Core.ViewModels.FormRendering.FieldDataViewModel

@Confluence.LabelsGroup(title: Model.Title,
                        contentRead: Confluence.LabelBold(@Model.InitialValue),
                        contentEdit: Model.HasWritePermission ? Confluence.InputTextArea(Model.InitialValue, Model.Name, Model.Name, Model.MaxLength, false, !Model.HasReadPermission, Model.CssClass, false, null, Model.Attributes.ToDictionary(x => x.Key, x => x.Value), width: "100%", height: "50px") :
                        Confluence.InputTextArea(Model.InitialValue, Model.Name, Model.Name, Model.MaxLength, false, Model.HasReadPermission, Model.CssClass, false, null, Model.Attributes.ToDictionary(x => x.Key, x => x.Value), width: "100%", height: "50px")
                       )
