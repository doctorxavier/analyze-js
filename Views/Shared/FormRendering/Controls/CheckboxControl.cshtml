@using IDB.Presentation.MVC4.Services.Core.DynamicFormsHelper
@model IDB.MW.Application.Core.ViewModels.FormRendering.FieldDataViewModel

@{    
    bool isChecked = (Model.InitialValue == "1.00");
}

@Confluence.LabelsGroup(null,
                        Confluence.InputCheckbox(isChecked, Model.Name,
                                                Model.Name, Model.Title, false, true,
                                                Model.CssClass,
                                                Model.Attributes.ToDictionary(x => x.Key, x => x.Value), null, true),
                        contentEdit: Model.HasWritePermission ?
                        Confluence.InputCheckbox(isChecked, Model.Name, Model.Name, Model.Title, false,
                        !Model.HasReadPermission, Model.CssClass, Model.Attributes.ToDictionary(x => x.Key, x => x.Value), null, true)
                        : Confluence.InputCheckbox(isChecked, Model.Name, Model.Name, Model.Title, false,
                        Model.HasReadPermission, Model.CssClass, Model.Attributes.ToDictionary(x => x.Key, x => x.Value), null, true)
                       )

