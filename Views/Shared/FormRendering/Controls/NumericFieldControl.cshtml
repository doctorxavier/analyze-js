@using IDB.Presentation.MVC4.Services.Core.DynamicFormsHelper
@model IDB.MW.Application.Core.ViewModels.FormRendering.FieldDataViewModel

@{
    decimal? value = Model.InitialValue != null ? decimal.Parse(Model.InitialValue.ToString()) : null;
}

@Confluence.LabelsGroup(Model.Title,
                        Confluence.LabelBold(Model.InitialValue),
                        contentEdit: Model.HasWritePermission ?
                        Confluence.InputDecimal(value, Model.Name, false, dataAttributes: Model.Attributes.ToDictionary(x => x.Key, x => x.Value), width: "100%", disabled: !Model.HasReadPermission)
                        : Confluence.InputDecimal(value, Model.Name, false, dataAttributes: Model.Attributes.ToDictionary(x => x.Key, x => x.Value), width: "100%", disabled: Model.HasReadPermission)
                       )
