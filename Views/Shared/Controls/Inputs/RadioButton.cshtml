@using IDB.Presentation.MVC4.Models.Inputs

@model RadioButtonModel

@if (Model != null)
{
    @ControlTemplates.InputRadioButtonNew(Model.Value, Model.Name, isChecked: Model.IsChecked, required: Model.Required, 
                                          disabled: Model.Disabled, htmlClass: Model.HtmlClass, 
                                          dataAttributes: Model.DataAttributes, label: Model.Label, id: Model.Id, 
                                          forceValidation: Model.ForceValidation, isDisplayBlock: Model.IsDisplayBlock, 
                                          jsonModel: Model.JsonModel)
}