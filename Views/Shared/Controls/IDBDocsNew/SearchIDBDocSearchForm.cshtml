@using IDB.Architecture.Language

@model IDB.Presentation.MVC4.Models.Documents.SearchDocumentModalViewModel

@{
    var anos = new List<SelectListItem>();
    
    for (var year = DateTime.Today.Year; year >= 2004; year--)
    {
        anos.Add(new SelectListItem()
        {
            Value = year.ToString(), Text = year.ToString()
        });
    }
}
<form id="dmSearchForm">
<div data-id-selector="search-form" class="row">
    <div class="col-md-12 mb10">
        <div class="col-md-6">
            @Confluence.InputText(Model.OperationNumber, "txtOperationNumber", placeholder: Localization.GetText("Document.Filter.OperationNumber"), required: false, width: "100%")
        </div>
        <div class="col-md-6">
            @Confluence.InputText(null, "txtContractNumber", placeholder: Localization.GetText("Document.Filter.ContractNumber"), required: false, width: "100%")
        </div>
    </div>

    <div class="col-md-12 mb10">
        <div class="col-md-6">
            @Confluence.InputText(null, "txtIDBDocsNumber", placeholder: Localization.GetText("Document.Filter.IDBDocNumber"), required: false, width: "100%")
        </div>
        <div class="col-md-6">
            @Confluence.InputText(null, "txtDocumentName", placeholder: Localization.GetText("Document.Filter.DocumentName"), required: false, width: "100%")
        </div>
    </div>

    <div class="col-md-12 mb10">
        <div class="col-md-6">
            @Confluence.InputText(null, "txtDocumentId", placeholder: Localization.GetText("Document.Filter.DocumentId"), required: false, width: "100%")
        </div>
        <div class="col-md-6">
            @Confluence.InputText(null, "txtIDBAuthorUserId", placeholder: Localization.GetText("Document.Filter.IDBAuthorId"), required: false, width: "100%")
        </div>
    </div>

    <div class="col-md-12 mb10">
        <div class="col-md-6">
            @Confluence.InputText(null, "txtDocumentContent", placeholder: Localization.GetText("Document.Filter.DocumentContent"), required: false, width: "100%")
        </div>
    </div>

    <div class="col-md-12 mb10">
        <div class="col-md-6">
            @Confluence.InputCheckbox(false, "chkInputCorrespondence", forceValidation: false,
                label: Localization.GetText("Document.Filter.SiscorCorrespondence"))
        </div>
        <div class="col-md-6">
        </div>
    </div>
    
    <div class="col-md-12">
        <div class="col-md-6">
            <div data-id-selector="inputCorrespondenceContainer" class="row hide mb20">
                <div class="col-md-4">
                    @Confluence.InputText(null, "txtDocumentNumberInput", placeholder: Localization.GetText("DM.Filter.Number"), required: false, width: "100%")
                </div>
                <div class="col-md-4">
                    @Confluence.InputDropDown(null, "cboInputCorrespondenceYear", anos, required: false, placeholder: "Year", width: "100%")
                </div>
            </div>
        </div>
        <div class="col-md-6">
        </div>
    </div>
</div>
</form>