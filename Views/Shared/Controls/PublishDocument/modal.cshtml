@using IDB.Architecture.Language
@using IDB.Presentation.MVC4.Models.Modal

@Confluence.ModalInformation(
    Html.Partial("~/Views/Shared/Controls/PublishDocument/index.cshtml"),
    id: "publishDocumentData",
    title: Localization.GetText("DM.Publish.Title"),
    showTitleIcon: false,
    showDefaultCancelButton: true,
    buttons: new List<ModalButtonsViewModel>
    {
        new ModalButtonsViewModel {
            Id = "btnPublishDocument",
            Name ="btnPublishDocument",
            Text = Localization.GetText("DM.Publish"),
            Type = "buttonOrange",
            CloseAtEnd = true,
        }
    })

@Confluence.ModalWarning(new HtmlString(Localization.GetText("DM.Publish.Msg.Confirmation")),
    "dmDiscloseWarningModal",
    new List<IDB.Presentation.MVC4.Models.Modal.ModalButtonsViewModel>
    {
        new IDB.Presentation.MVC4.Models.Modal.ModalButtonsViewModel
        {
            Id = "btnDiscloseOk",
            Name = "btnDiscloseOk",
            Text = Localization.GetText("GLOBAL.CONTROL.OK"),
            CloseAtEnd = true,
            Type = "buttonOrange"
        }
    },
    showTitleIcon: true,
    showDefaultCancelButton: true)