@using System.Web.Mvc.Html
@using IDB.Architecture.Language
@using System.Configuration
@using IDB.Presentation.MVC4.Areas.PACI.Models
@model QuestionnaireViewModel

@{
    Layout = null;
}
<script type="text/javascript">
    var operationNumber = '@Model.OperationNumber';
    var basePath = '@ConfigurationManager.AppSettings.Get("BasePath")';
</script>

<script type="text/javascript" src="@Url.Content("~/Scripts/Modules/PACI/app.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/Modules/PACI/questionnaire.js")"></script>

<link href="@Url.Content("~/Content/Modules/PACI/paci.css")" rel="stylesheet" />


@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <script type="text/javascript">
        showError('@Model.ErrorMessage');
    </script>
}

<div class="padding20">
    <div class="col-md-12">
        <h2 class="titlePrincipal">@Localization.GetText("PACI.TITLE")</h2>
    </div>
    <div id="main_section_questionnaire" class="col-md-12 pl0">

        @if (Model.IsEdit)
        {
            Html.RenderPartial("~/Areas/PACI/Views/Partials/QuestionnaireModuleEdit.cshtml", Model);
        }
        else
        {
            Html.RenderPartial("~/Areas/PACI/Views/Partials/QuestionnaireModuleView.cshtml", Model);
        }
    </div>
</div>