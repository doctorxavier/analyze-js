@using IDB.Presentation.MVC4.Models.Modal
@using IDB.Presentation.MVC4.Areas.PACI.Helpers

@Confluence.ModalInformation(
    Html.Partial("~/Views/Shared/Controls/DocumentManagement/Modal/Index.cshtml"
    , new IDB.Presentation.MVC4.Models.Documents.SearchDocumentModalViewModel
    {
        SearchModalId = "docTable",
        MultipleSelection = false,
        TargetFunction = "renderizeRow",
        BusinessAreaCode = "BA_RISKS",
        OperationNumber = Model.OperationNumber
    })
    , "dmDocumentModal"
    , new List<IDB.Presentation.MVC4.Models.Modal.ModalButtonsViewModel>
    {
        new ModalButtonsViewModel { Id = "cancelButton", Name ="cancelButton", Text = Localization.GetText("Document.Button.Cancel"), Type = "buttonLink", CloseAtEnd = true },
        new ModalButtonsViewModel { Id = "performButton", Name ="performButton", Text = Localization.GetText("Document.Button.Add"), Type = "buttonBlue", CloseAtEnd = false }
    }
    ,"Add Documents"
    , false
    , false)

