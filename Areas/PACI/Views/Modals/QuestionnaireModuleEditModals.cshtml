        new ModalButtonsViewModel { Id = "btnInactiveYes", Name ="btnInactiveYes", Text = Localization.GetText("PACI.YES"), Type = "buttonBlue", CloseAtEnd = true },
        new ModalButtonsViewModel { Id = "btnInactiveNo", Name ="btnInactiveNo", Text = Localization.GetText("PACI.NO"), Type = "buttonBlue", CloseAtEnd = true }
