<div class="col-md-12 mt20" id="commentBox">
    <div class="col-md-12">
        <div class="inputComment">
            <div class="labels col-md-12 mb0">
                <label class="w90">
                    @Confluence.LabelBold(Localization.GetText("SP.Administration.AdministrationTable.Justification"))
                </label>
                <label class="w90">
                    @Confluence.Label(IDBContext.Current.UserName)
                </label>
                <label class="col-md-12">
                    @Confluence.Label(string.Format("{0:dd MMM yyyy}", DateTime.Now))
                </label>
                <label class="mr0">
                    @Confluence.ButtonTrash("", htmlClass: "mt0", action: "removeComment")
                </label>
            </div>
            <div class="col-md-12">
                @Confluence.InputTextArea("", "JustificationEdit")
            </div>
        </div>
    </div>    
</div>