@{
    var tempId = DateTime.Now.ToString("yyyyMMddHHmmssffff");
}

<tr data-id="@tempId" data-activities new-activity>
    <td class="treeNumber"></td>
    <td class="noBackground tree icon">@Confluence.ButtonShowRowExpand(true)</td>
    <td>@Confluence.InputDropDown(null, "type", ViewBag.ActivityType, width: "100%")</td>
    <td class="text-right">@Confluence.InputNumber(null, "planned", width: "100%", minValue: "0")</td>
    <td class="text-right">@Confluence.InputNumber(null, "actual", width: "100%", minValue: "0",required:false)</td>
    <td class="text-center">
        @Confluence.ButtonTrash("", action: "DelActivitySimplified")
    </td>
</tr>

<tr data-row-parent-id="@tempId" class="showChildRow">
    <td class="treeNumber"></td>
    <td class="tree"><span></span></td>
    <td colspan="4" class="pr0 pl50">
        <table class="tableNormal mb10 skinGray" name="ActivityDoc">
            <thead>
                <tr data-id="">
                    <th class="w120">@Localization.GetText("SP.Summary.ActivitiesTable.File.User")</th>
                    <th class="w100">@Localization.GetText("SP.Summary.ActivitiesTable.File.Date")</th>
                    <th class="w125">@Localization.GetText("SP.Summary.ActivitiesTable.File.IDBNumber")</th>
                    <th>@Localization.GetText("SP.Summary.ActivitiesTable.File.Description")</th>
                    <th class="w140">@Localization.GetText("SP.Summary.ActivitiesTable.File.Action")</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
        <div class="text-center">
            @Confluence.ButtonAddNewRows(Localization.GetText("SP.Summary.ActivitiesTable.File.Add"), null, action: "addFileActivity")
        </div>
    </td>
</tr>