@using IDB.Presentation.MVC4.Models.Modal
@using IDB.Presentation.MVC4.General

@Display.AddModalButton(new ModalViewModel(contentSelector: "[data-name=\"remove-objective-modal\"]",
        title: Localization.GetText("Common.Warning"),
        type: CssClass.ModalWarningNoIcon,
        moveOriginalContent: true,
        name: "btn-open-popup-remove-objective",
        closeOnOverlay: false,
        allowClose: true,
        actionOnClose: "")
    .AddButton(name: "btn-remove-objective-cancel",
                    text: Localization.GetText("Common.Cancel"),
                    type: CssClass.ButtonLink,
                    callback: "")
        .AddButton(name: "btn-remove-objective-delete",
                    text: Localization.GetText("Common.Delete"),
                    type: CssClass.Button05,
                    callback: "deleteObjective",
                    closeAtEnd: true))


<div data-name="remove-objective-modal" class="hide modalBody">
    <div class="row mb30">
        <div class="col-md-12">
            <div class="lblvalue bold">
                @Localization.GetText("CS.ResultMatrix.Modal.TextForUpdate")
            </div>
        </div>
    </div>
    <div class="row mb30">
        <div class="col-md-12">
            <div class="lblcontent">
                <label class="labelNormal">@Localization.GetText("CS.ResultMatrix.CountryStrategyObjective")</label>
            </div>
            <div class="lblvalue bold" data-section="objective-name">
        
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="lblcontent">
                <label class="labelNormal">@Localization.GetText("CS.ResultMatrix.Modal.TextUndone")</label>
            </div>
        </div>
    </div>
</div>