@using IDB.MW.Application.CountryStrategyModule.ViewModels.ResultMatrix
@using IDB.Presentation.MVC4.Helpers
@using IDB.MW.Application.CountryStrategyModule.Enums
@model ResultMatrixViewModel

@{
    if (SecurityHelper.IsVisible(Model.FieldAccessList, "cs-result-matrix-edit-control"))
    {
        var monitoringPermission = new Dictionary<string, string>() { { "idb-fieldname",
                "cs-result-matrix-monitoring-control" } };
        <div data-id="headerButtons" class="float-right" data-idb-fieldname="cs-result-matrix-admin-control">
            @Confluence.ButtonBlue(Localization.GetText("CS.ResultMatrix.Button.GenerateCPDMatrix"),
               name: "genetateCPDMatrix", dataAttributes: monitoringPermission, htmlClass: "")
            @Confluence.ButtonLink(Localization.GetText("Common.Cancel"), name: "cancelActiveRM")
            @Confluence.ButtonOrange(Localization.GetText("Common.Save"), name: "saveActiveRM")
        </div>
    }
}