@using IDB.Presentation.MVC4.Areas.CountryStrategy.Models
@using IDB.MW.Application.CountryStrategyModule.ViewModels.StatusSearch

@model SearchFilterViewModel

@(Html.FilterBox()
    .ClassMainRow("filterNormalExtension mb20")
    .Rows(row =>
    {        
        row.Add().Columns(column =>
        {
            column.Add(ColumnType.MD_2).Class("name-data-input")
                .AddContent(Confluence.Label(Localization.GetText("CS.StatusSearch.Status"), htmlClass: "searchPanelFontStyle"));

            column.Add(ColumnType.MD_2).Class("name-data-input")
                .AddContent(Confluence.Label(Localization.GetText("Common.Year"), htmlClass: "searchPanelFontStyle"));
            
            column.Add(ColumnType.MD_4).Class("name-data-input")
                .AddContent(Confluence.Label(Localization.GetText("CS.StatusSearch.Country"), htmlClass: "searchPanelFontStyle"));
            
            column.Add(ColumnType.MD_4).Class("name-data-input")
                .AddContent(Confluence.Label(Localization.GetText("CS.StatusSearch.CountryDepartment"), htmlClass: "searchPanelFontStyle"));
        });

        row.Add().Columns(column =>
        {
            column.Add(ColumnType.MD_2)
                .AddContent((Html.MultiDropDown("statusCombo")
                .Initialize(false)
                .HtmlClass("statusSearchFilter")
                .Items(ViewBag.StatusList)
                .CanSelectGroup()
                .SelectedItems(Model.Status)));
            
            column.Add(ColumnType.MD_2)
                .AddContent((Html.MultiDropDown("yearCombo")
                .Initialize(false)
                .HtmlClass("statusSearchFilter")
                .Items(ViewBag.YearList)
                .CanSelectGroup()
                .SelectedItems(Model.Year)));
            
            column.Add(ColumnType.MD_4)
                .AddContent(Html.MultiDropDown("countryCombo")
                .Initialize(false)
                .HtmlClass("statusSearchFilter")
                .Items(ViewBag.CountryList)
                .CanSelectGroup()
                .SelectedItems(Model.Country));

            column.Add(ColumnType.MD_4)
                .AddContent(Html.MultiDropDown("countryDepartmentCombo")
                .Initialize(false)
                .HtmlClass("statusSearchFilter")
                .Items(ViewBag.CountryDepartmentList)
                .CanSelectGroup()
                .SelectedItems(Model.CountryDepartment));
        });
    })
)