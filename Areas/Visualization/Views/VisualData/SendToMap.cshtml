            <span class="vo-dropdown-container">
                <span class="vo-dropdown-wrap">
                    @Html.DropDownList(
                        "itemsSelectOptions",
                        selectOptionsItems,
                        new
                        {
                            @class = "vo-input",
                            @onChange = "selectDeselectVOSendItems(this)"
