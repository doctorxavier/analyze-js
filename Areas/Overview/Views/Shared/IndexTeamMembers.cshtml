@using IDB.MW.Domain.Models.Architecture.OperationProfile.BasicData
@model ICollection<OperationTeamDataModel>
@{
    ViewBag.Title = Localization.GetText("Operation team");

}


<div class="contenido mod_operationTeamMember">

    @if (Model != null)
    {
        bool flagChange = true;

        int nroIte = Model.Count / 3;
        for (int i = 0; i < Model.Count; i++)
        {
            if (flagChange)
            {
                flagChange = false;
                @Html.Raw("<ul>");

            }
            <li>
                <div class="thumbnail" style="height:100% !important;width: 160px;">
                    <p>@Model.ElementAt(i).FullName</p>
                    <p class="userName">@Model.ElementAt(i).UserName</p>
                    @if (@Model.ElementAt(i).FullName.Length < 21)
                    {<br /> }
                    <div style="vertical-align: middle; text-align: center;">
                        @if (!string.IsNullOrEmpty(Model.ElementAt(i).PictureUrl))
                        {
                            <img src=@Model.ElementAt(i).PictureUrl 
                                 style="display: inline; width: 100px; height: 100px; ">
                        }
                        else
                        {
                            <img src="~/Images/Contenido/basicdata/DefaultPictureUrl.png" 
                                 style="display: inline; width: 100px; height: 100px; 
                                        vertical-align: middle">
                        }
                    </div>
                    @if (!string.IsNullOrEmpty(Model.ElementAt(i).NameRol))
                    {
                        <p class="roleName">@Localization.GetText(Model.ElementAt(i).NameRol)</p>
                    }
                    else
                    {
                        <p class="roleName"></p>
                    }
                    @if (!string.IsNullOrEmpty(Model.ElementAt(i).NameUnit))
                    {
                        <p class="description">@Model.ElementAt(i).NameUnit</p>
                    }
                    else
                    {
                        <p class="description" style="color:white"><br /></p>
                    }
                </div>
            </li>

            if ((i + 1) % 3 == 0)
            {
                @Html.Raw("</ul>");
                flagChange = true;

            }
        }
        if (!flagChange)
        {
            @Html.Raw("</ul>");
        }
    }
</div>