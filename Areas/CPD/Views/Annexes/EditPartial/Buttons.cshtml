@using IDB.MW.Application.CPDModule.ViewModels.Annexes;
@using IDB.Presentation.MVC4.Areas.CPD.Models;

@model AnnexesViewModel

<div data-id="headerButtons" class="float-right">
    @if (ViewBag.ActiveTab == NavigationAttributes.TAB_NAME_RESULTS_MATRIX)
    {
        <div data-type="contentButtons" data-id="edit-RM">
            @Confluence.ButtonLink(Localization.GetText("Common.Cancel"), name: "cancel-RM")
            @Confluence.ButtonOrange(Localization.GetText("Common.Save"), name: "save-RM")
        </div>
    }

    @if (ViewBag.ActiveTab == NavigationAttributes.TAB_NAME_INDICATIVE_PIPELINE)
    {
        <div data-type="contentButtons" data-id="edit-IP">
            @Confluence.ButtonLink(Localization.GetText("Common.Cancel"), name: "cancel-IP")
            @Confluence.ButtonOrange(Localization.GetText("Common.Save"), name: "save-IP")
        </div>
    }
</div>