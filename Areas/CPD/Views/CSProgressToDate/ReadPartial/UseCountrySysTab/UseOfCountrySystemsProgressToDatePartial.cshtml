@using IDB.Presentation.MVC4.Helpers
@using IDB.MW.Application.CPDModule.ViewModels.CSProgressToDate

@model CSPDUseOfCountrySystemsTabViewModel


<div class="row mb20">
    <div class="col-md-12">
        @Confluence.Label(Localization.GetText("CPD.CSProgressToDate.UseOfCountrySystemes.CSProgressToDate.Diagnostics"))
    </div>
</div>

<div class="row mb10">
    <div class="col-md-6">
        @Confluence.Label(text: Localization.GetText("CPD.CSProgressToDate.UseOfCountrySystemes.CSProgressToDate.FinancialManagement"))
    </div>

    <div class="col-md-6">
        @Confluence.Label(text: Localization.GetText("CPD.CSProgressToDate.UseOfCountrySystemes.CSProgressToDate.Procurement"))
    </div>
</div>


<div class="row">
    <div class="col-md-6">
        @foreach (var item in Model.FinancialManagementsRO)
        {
            <div class="row mb10">
                <div class="col-md-8">
                    @Confluence.LabelBold(item.Item1)
                </div>
                <div class="col-md-4">
                    @Confluence.LabelBold(item.Item2.ToString())
                </div>
            </div>
        }
    </div>

    <div class="col-md-6">
        @foreach (var item in Model.ProcurementsRO)
        {
            <div class="row mb10">
                <div class="col-md-8">
                    @Confluence.LabelBold(item.Item1)
                </div>
                <div class="col-md-4">
                    @Confluence.LabelBold(item.Item2.ToString())
                </div>
            </div>
        }
    </div>
</div>

<div class="row">

  <div class="col-md-4 mt15">
       @Confluence.LabelBold(Model.FinancialManagementComment)
  </div>

  <div class="col-md-2">

  </div>

  <div class="col-md-4 mt15">
       @Confluence.LabelBold(Model.ProcurementComment)
  </div>

  <div class="col-md-2">

  </div>

</div>