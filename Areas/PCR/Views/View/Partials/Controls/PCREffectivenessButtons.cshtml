@using IDB.Presentation.MVC4.Helpers
@if (ViewBag.WritePermissionStage)
{
    <div class="buttom-Padding" data-PageMode="read">
        <button class="btn btn-primary" data-action="editEffectiveness">@Localization.GetText("PCR.Edit")</button>
    </div>
    <div class="buttom-Padding" data-PageMode="edit">
        <button class="btn btn-link" data-action="cancelEditEffectiveness">@Localization.GetText("PCR.Cancel")</button>
        <button class="btn btn-warning" data-action="saveEffectiveness">@Localization.GetText("PCR.Save")</button>
    </div>
}