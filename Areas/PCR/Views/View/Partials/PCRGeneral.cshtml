@using IDB.Presentation.MVC4.Helpers
@model IDB.MW.Application.PCRModule.ViewModels.ChecklistService.PCRGeneralViewModel

<div class="row">
    <div class="col-md-12 text-right">
        @Html.Partial("Partials/Controls/PCRGeneralButtons")
    </div>
</div>
<div class="row">
    <div class="col-md-10">
        <h4 class="headingh3">@Localization.GetText("PCR.Checklist.TabGeneral")<button class="btn btn-sm info-modal infoButtonUpdateTable"  data-action="redirectToSharepointHelp" data-url="@Url.Action("ShowToSharePointHelp", "View")" caller="general"></button></h4>
    </div>
    <div class="col-md-2 text-right">
        @if (ViewBag.Permission)
        {   
            <span data-PageMode="read">     
                @if (ViewBag.TeamRole || ViewBag.SPDRole)
                {
                    <button class="btn btn-primary" data-modal-allowclose="true" data-modal="verifyContentModal" data-action="resizeContentLocal">@Localization.GetText("PCR.FollowUpService.Verify.Title")</button>
                }
            </span>
        }
    </div>
</div>
<h4 class="headingh3">@Localization.GetText("PCR.Checklist.TabGeneral.Core")</h4>
<div class="row">
    <div class="col-md-12">
        @Html.Partial("Partials/DataTables/PCRGeneralCoreCriteria", Model.PCRGeneralViewModelList)
    </div>
</div>
<br />
<h4 class="headingh3">@Localization.GetText("PCR.Checklist.TabGeneral.NonCore")</h4>
<div class="row">
    <div class="col-md-12">
        @Html.Partial("Partials/DataTables/PCRGeneralNonCoreCriteria", Model.PCRGeneralViewModelList)
    </div>
</div>
<div class="row">
    <div class="col-md-12 text-right">
        <br/>
        @Html.Partial("Partials/Controls/PCRGeneralButtons")
    </div>
</div>
<input type="hidden" class="hidViewModel" value="@ViewBag.SerializedViewModel" />
