@using IDB.Presentation.MVC4.Helpers
@using IDB.MVCControls.DataTable.Helpers

@model List<IDB.MW.Application.PCRModule.ViewModels.FollowUpService.PCRFollowUpVerifySpecificContentViewModel>

@{
    var config = Html.RenderDataTable(Model)
        .Name("verifyContentTable")
        .Columns(columns =>
        {
            columns.Bound(c => c.Content)
                .Persistent()
                .Header(Localization.GetText("PCR.FollowUpService.Verify.Verification"));

            
            columns.Template(c => ControlTemplatesPCR.IconVerify(c.ComplianceStatus))
                .Persistent()
                .CssClass("text-Modal-Align")
                .Header(Localization.GetText("PCR.FollowUpService.Verify.Compliance"));
        });
}

@Html.Partial("Controls/DataTable", config)
