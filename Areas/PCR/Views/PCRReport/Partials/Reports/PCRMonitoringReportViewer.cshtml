@using IDB.ReportViewer
@using IDB.ReportViewer.Models

@Html.MvcReportViewer(new ReportViewerParameters()
{
    UseCustomErrorPage = false,
    ASPXViewerPath = "~/ReportViewer/MvcReportViewer.aspx",
    FormMethod = FormMethod.Post,
    UseLocalReport = true,
    ReportDataSourceCollection = ViewBag.ReportDataSource,
    ReportDefinition = ViewBag.ReportDefinition,
    HtmlAttributes = new Dictionary<string, object> {{ "width", "1200px" }}
})
