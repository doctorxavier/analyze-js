@using IDB.Presentation.MVC4.Helpers
<!DOCTYPE html>
<html>
<head>
    <title>IDB</title>
    <meta charset="utf-8" />
    <meta name="Author" content="BID" />
    <meta name="Description" content="BID" />
    @Styles.Render("~/Content/cssR2")
    @Styles.Render("~/Content/themes/base/css")
</head>
<body>
    <div id="loadingPanel">
        <div id="circularG">
            <div id="circularG_1" class="circularG">
            </div>
            <div id="circularG_2" class="circularG">
            </div>
            <div id="circularG_3" class="circularG">
            </div>
            <div id="circularG_4" class="circularG">
            </div>
            <div id="circularG_5" class="circularG">
            </div>
            <div id="circularG_6" class="circularG">
            </div>
            <div id="circularG_7" class="circularG">
            </div>
            <div id="circularG_8" class="circularG">
            </div>
        </div>
    </div>
    <section class="container-fluid">
        @RenderBody()
    </section>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/scripts")
    @RenderSection("scripts", false)
    @Html.WriteScriptBlocks()
    
    <script type="text/javascript">
        ShowMessageFunctions.CurrentFunction = ShowMessageFunctions.GenericFunction;
        BIDConfig.CreateValidatorOnEdit = false;

        registerCallback(function ()
        {
            resizeIframe();

            window.setInterval(function()
            {
                resizeIframe();
            }, 100);
        }, true);
    </script>
    @Html.Partial("~/Views/Shared/Controls/ShowError.cshtml")
</body>
</html>