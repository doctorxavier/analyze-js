@using IDB.MVCControls.General.Helpers
@using IDB.Presentation.MVC4.Helpers

@model IDB.MW.Application.TCAbstractModule.ViewModels.TCAbstractService.PlaceHoldViewModel

    

<div data-pagemode="read">

    <div class="row row-header">
        <div class="col-md-3">
            @Localization.GetText("TC.SingleWDecision.PlaceHold.Reason")
        </div>
        <div class="col-md-9">
            @Localization.GetText("TC.SingleWDecision.PlaceHold.Explanation")
        </div>
    </div>

    <div class="row row-body-40">
        <div class="col-md-3">
            
            
        </div>
        <div class="col-md-9">
            @Model.Explanation.HtmlEncode()
        </div>
    </div>



            </div>

<div data-pagemode="edit">

    <div class="row row-header">
        <div class="col-md-3">
            @Localization.GetText("TC.SingleWDecision.PlaceHold.Reason")
        </div>
        <div class="col-md-9">
            @Localization.GetText("TC.SingleWDecision.PlaceHold.Explanation")
            <span class="asteriskColor">*</span>
            </div>       
        </div>

    <div class="row row-body-40">
        <div class="col-md-3">
            @Input.DropDown(ViewBag.EnumMapping[Model.ReasonHoldOperation], "reasonHold", ViewBag.ReasonHoldOperation, showEmptyOption: false)
    </div>
        <div class="col-md-9">
            @ControlTemplates.InputTextArea(Model.Explanation, "additionalCommentPlaceHold", rows: 6, required: true, placeholder: "Explanation")
</div>
    </div>


</div>
