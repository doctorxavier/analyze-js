@using IDB.MW.Application.MrBlueModule.Email.Enumerators;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    @Html.Label("Mock to test send email for ESG Document Disclosure",
        new { @style = "margin-left: 150px; margin-top: 50px; font-size:" + 
            "40px; font-weight: bold; text-decoration: underline;" })

    @using (Html.BeginForm(
        "SendEmail",
        "ESGDocumentDisclosureEmailMock",
        new { emailType = ESGDDEmailSendType.ESGPrimaryTeamMemberToTeamLeader },
        FormMethod.Post))
    {
        <input type="submit" 
               style="margin-left: 50px; margin-top: 50px;" 
               class="btn btn-primary" 
               value="Send Email To TL Ready to disclosure"/>
    }


    @using (Html.BeginForm(
        "SendEmail",
        "ESGDocumentDisclosureEmailMock",
        new { emailType = ESGDDEmailSendType.TeamLeaderToESGRoles },
        FormMethod.Post))
    {
        <input type="submit" 
               style="margin-left: 50px; margin-top: 50px;"
               class="btn btn-primary"  
               value="Send Email To ESG roles as Sent to disclosure"/>
    }

    @using (Html.BeginForm(
        "SendEmail",
        "ESGDocumentDisclosureEmailMock",
        new { emailType = ESGDDEmailSendType.ESGPrimaryTeamMemberCloseDisclosureMilestone },
        FormMethod.Post))
    {
        <input type="submit" 
               style="margin-left: 50px; margin-top: 50px;" 
               class="btn btn-primary" 
               value="Send Email to TL as milestone close disclosure has been submitted"/>
    }

</div>

