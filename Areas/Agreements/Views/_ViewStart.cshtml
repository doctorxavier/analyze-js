@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {

        if (typeof initializeApp !== 'undefined' && $.isFunction(initializeApp)) {
            initializeApp();
        }

        $('html').off('resize');

        ShowMessageFunctions.CurrentFunction = ShowMessageFunctions.GenericFunction;

        MessageTranslation.text('deleteConditionMessage',
            '@Localization.GetText("This action cannot be undone, are you sure you wish to continue?")');

        MessageTranslation.text('errorMessage',
            '@Localization.GetText("COMMON.ApplicationMappingException.Message")');

        MessageTranslation.text('mandatorySubmissionDate',
            '@Localization.GetText("MandatorySubmissionDate")');

        MessageTranslation.text('expiredMessage',
            '@Html.Raw(Localization.GetText("Clauses.Expired.OtherP.Message"))');

        MessageTranslation.text('fulfillmentConfirmationMessage',
            '@Localization.GetText("PSG.FinalStatus.Fulfillment.Confirmation.Message")');

        MessageTranslation.text('changeConditionStatusMessage',
            '@Localization.GetText("PCR.FollowUp.ModalConfirmSaveEditFollowUp")');

        MessageTranslation.text('fillRequired',
            '@Localization.GetText("CC.RevolvingFund.FillRequiredField")');
    });
</script>