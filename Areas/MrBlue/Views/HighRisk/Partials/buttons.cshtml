@using IDB.Presentation.MVC4.Helpers
@using IDB.MVCControls.General.Helpers
@using IDB.Architecture.Language

<div data-id="headerButtons" class="float-right main-buttons">
    @if (ViewBag.WriteRole)
    {
        @Confluence.ButtonLink(
            Localization.GetText("Cancel"),
            action: "cancel")

        @Confluence.ButtonOrange(
                 Localization.GetText("MrBlue.Finalize"),
            action: "save")
    }
    else
    {
        @Confluence.ButtonBlue(
             Localization.GetText("MrBlue.Close"),
            action: "cancel")
    }
</div>