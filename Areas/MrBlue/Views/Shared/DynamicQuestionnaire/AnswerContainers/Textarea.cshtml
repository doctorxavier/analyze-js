@using IDB.MW.Application.MrBlueModule.ViewModels.DynamicQuestionnaire

@model AnswerViewModel

<div class="esgAnswerContainer" data-answerid="@Model.AnswerId" style="width:100%;">
    @Confluence.InputTextArea(Model.Question.Value, Model.Question.QuestionCode, Model.Question.QuestionCode, placeholder : Model.Text, htmlClass : "width100", dataAttributes : new Dictionary<string, string> { { "persist-answerId", Model.AnswerId.ToString() }, { "persist-questionId", Model.QuestionId.ToString() }, { "persist-questionGroupId", Model.Question.QuestionGroupId.ToString() } }.Concat(Model.Question.ValidationAttributes).ToDictionary(k => k.Key, v => v.Value), required : Model.Question.IsMandatory, width : "100%", height : "125px")
</div>