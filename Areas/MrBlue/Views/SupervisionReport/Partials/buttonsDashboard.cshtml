@using IDB.Architecture.Language
@using IDB.MW.Application.MrBlueModule.Enums
@using IDB.MW.Infrastructure.Helpers
@using IDB.Presentation.MVC4.Models.Modal
@using IDB.Presentation.MVC4.General

<div data-id="dashboardButtons" class="float-right">
    <div class="row">
        <div class="col-md-12">
            @if(ViewBag.WriteRole)
            {
                @Display.AddModalButton(new ModalViewModel("#uploadFileCorrect",
                    type : CssClass.ModalInformationNoIcon,
                    title : string.Empty,
                    typeButton : CssClass.ButtonHidden,
                    text : string.Empty,
                    moveOriginalContent : true,
                    actionOnClose : "reloadWindowDashboard"))

                @Display.AddModalButton(new ModalViewModel("#uploadSupervisionReportFile",
                    type : CssClass.ModalInformationNoIcon,
                    title : Localization.GetText("MrBlue.SupervisionReport.UploadSupervisionReport"),
                    typeButton : CssClass.Button01,
                    text : Localization.GetText("Upload"),
                    moveOriginalContent : true,
                    actionOnClose:"exitUpload"))

                @Confluence.ButtonBlue(
                    Localization.GetText("MrBlue.SupervisionReport.NewFromMostRecent"),
                    name : "buttonNewFromMostRecent",
                    action : "newReportFromMostRecent"
                )

                @Confluence.ButtonBlue(
                    Localization.GetText("New"),
                    name : "buttonNew",
                    action : "newReport"
                )

            }
        </div>
    </div>
</div>
