@using IDB.Presentation.MVC4.Helpers
@using IDB.Architecture.Language
@using IDB.MW.Application.Core.ViewModels

@model IDB.MW.Application.OPUSModule.ViewModels.CreationFormService.CreationK2TaskViewModel

@Confluence.LabelSubTitleGroup(text: Localization.GetText("GLOBAL.K2.SUBTITLE.Validators"), htmlClass: "bold")

<div class="col-md-12 pt20">
    <table class="tableNormal" id="tableWorkflowValidators" data-idb-fieldname="tblWorkflowValidators">
        <thead>
            <tr>
                <th>@Localization.GetText("Order")</th>
                <th>@Localization.GetText("Role")</th>
                <th>@Localization.GetText("Type")</th>
                <th>@Localization.GetText("Status")</th>
            </tr>
        </thead>

        <tbody>
            @{int order = 1;}
            @foreach (var item in Model.Validators)
            {
                <tr data-id>
                    <td>@order</td>
                    <td>@item.Role</td>
                    <td>@(item.Mandatory ? "Mandatory Validator" : "Additional Validator")</td>
                    <td>@item.Status</td>
                </tr>
                order++;
            }
        </tbody>
    </table>
</div>


