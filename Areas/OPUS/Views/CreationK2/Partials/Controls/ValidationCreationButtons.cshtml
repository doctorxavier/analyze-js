@using IDB.Presentation.MVC4.Helpers
@using IDB.Presentation.MVC4.Models.Modal
@using IDB.Presentation.MVC4.General
<div id="headerButtons" class="float-right main-buttons validationButtons">
    <div data-pagemode="edit">
        @Confluence.ButtonLink(
            text: Localization.GetText("Cancel"),
                                       action: "cancelWorkflow", name: "cancelWorkflow", dataAttributes: new Dictionary<string, string> { { "idb-fieldname", "btnCancelWorkflow" } })
        <button data-id="butttonNewRelatedOperationModal" class="buttonBlue"
                data-idb-fieldname="btnSaveValidate"
                data-modal-allowclose="true"
                data-custom-modal="saveAndSendValidateModal"
                data-custom-modal-style="vex-theme"
                data-custom-modal-title="@Localization.GetText("GLOBAL.K2.BUTTON.SaveValidate")"
                data-custom-modal-validate="false"
                data-custom-buttons='["save", "cancel"]'
                data-custom-button-save-id="send"
                data-custom-button-save="@Localization.GetText("TC.Save")"
                data-custom-button-save-style="buttonBlue"
                data-custom-button-save-callback="saveAndValidateCreation"
                data-custom-button-save-closeatend="true"
                data-custom-button-cancel-id="cancel"
                data-custom-button-cancel="@Localization.GetText("TC.Cancel")"
                data-custom-button-cancel-style="buttonLink"
                data-custom-button-cancel-callback=""
                data-custom-modal-onclose=""
                data-custom-modal-closeonoverlayclick="false">
            @Localization.GetText("GLOBAL.K2.BUTTON.SaveValidate")
        </button>
        <button data-id="butttonNewRelatedOperationModal" class="buttonBlue"
                data-idb-fieldname="btnSaveReject"
                data-modal-allowclose="true"
                data-custom-modal="saveRejectModal"
                data-custom-modal-style="vex-theme"
                data-custom-modal-title="@Localization.GetText("GLOBAL.K2.BUTTON.SaveReject")"
                data-custom-modal-validate="false"
                data-custom-buttons='["save", "cancel"]'
                data-custom-button-save-id="send"
                data-custom-button-save="@Localization.GetText("TC.Save")"
                data-custom-button-save-style="buttonBlue"
                data-custom-button-save-callback="saveAndRejectCreation"
                data-custom-button-save-closeatend="true"
                data-custom-button-cancel-id="cancel"
                data-custom-button-cancel="@Localization.GetText("TC.Cancel")"
                data-custom-button-cancel-style="buttonLink"
                data-custom-button-cancel-callback=""
                data-custom-modal-onclose=""
                data-custom-modal-closeonoverlayclick="false">
            @Localization.GetText("GLOBAL.K2.BUTTON.SaveReject")
        </button>
        @Confluence.ButtonWhite(Localization.GetText("TC.Save"), action: "saveOnly", name: "saveOnly", dataAttributes: new Dictionary<string, string> { { "idb-fieldname", "btnSaveOnly02" } })      
    </div>
</div>

<div data-id="ModalRegion">
    <div id="saveAndSendValidateModal" class="hide modalBody creationModal">
        @Localization.GetText("GLOBAL.K2.MODAL.SaveSubmitTask")
    </div>
    <div id="saveRejectModal" class="hide modalBody creationModal">
        @Localization.GetText("GLOBAL.K2.MODAL.SaveRejectTask")
    </div>
</div>
