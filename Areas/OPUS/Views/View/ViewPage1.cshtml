@using IDB.Architecture.Language
@using IDB.MVCControls.DataTable.Helpers

@model IDB.MW.Application.OPUSModule.ViewModels.CreationFormService.ResponsibilityDataViewModel

@{
    var configoperationTeamsTable = Html.RenderDataTable(  new List<IDB.MW.Application.OPUSModule.ViewModels.CreationFormService.OperationTeamRowViewModel> { 
                new IDB.MW.Application.OPUSModule.ViewModels.CreationFormService.OperationTeamRowViewModel{Name= "1", Role=1, Delegate = "1"},
                new IDB.MW.Application.OPUSModule.ViewModels.CreationFormService.OperationTeamRowViewModel{Name= "2", Role=2, Delegate = "2"},
                new IDB.MW.Application.OPUSModule.ViewModels.CreationFormService.OperationTeamRowViewModel{Name= "3", Role=3, Delegate = "3"}});
    
    configoperationTeamsTable.Name( "operationTeamsTable" )
    .PrimaryKey( m => m.Name.ToString( ) ).AddPrimaryKeyToName( true )
    .Columns( columns =>
    {
        columns.Bound( c => c.Delegate ).Header( Localization.GetText( "User ID" ) ).Persistent( );
        columns.Bound( c => c.Name ).Header( Localization.GetText( "Organizational Unit" ) ).Persistent( );
        columns.Bound( c => String.Empty ).EditableTemplate( row => ControlTemplates.TrashRemoveButton( "removeRelatedOperation" ) ).Persistent( ).CssClass( "trash-icon" );
       
    } );
}

@Html.Partial( "Controls/DataTable" , configoperationTeamsTable )  