@using IDB.Architecture.Language

<h3 class="new-modal-title">
    <span class="new-modal-icon margin-left">&nbsp;</span>
    <span class="new-modal-text">Warning!</span>
</h3>
<div class="modalBody modalBodyColor">
    <div class="margin-Verify">
        @Localization.GetText("OP.AP.Documents.GenerateRegistry.Warning")
    </div>
    <hr />
    <div class="text-right">
        <button type="button"
                class="btn btn-link"
                data-action="cancelModal"
                data-idb-fieldname="btnCancelRegisterApproval">
            @Localization.GetText("OP.AP.Cancel")
        </button>
        <button type="button"
                class="button01"
                data-ismodal="true"
                data-action="registerApproval"
                data-idb-fieldname="btnConfirmRegisterApproval">
            @Localization.GetText("OP.AP.Confirm")
        </button>
    </div>
</div>