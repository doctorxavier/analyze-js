@using IDB.MW.Infrastructure.Configuration
@using IDB.MVCControls.General.Helpers

@model IDB.MW.Application.OPUSModule.ViewModels.FinancialDataExecutionService.OperationLevelViewModel
@{
    var appSettings = ConfigurationServiceFactory.Current.GetApplicationSettings();
    var formatDecimal = appSettings.FormatDecimal;

}

@if (Model != null)
{
    <div data-id="graphpanel" class="col-md-12 hide">
        <div style="width: 950px; margin-left: auto; margin-right: auto;">

            <div style="width: 950px; height: 50px;">
                <h4 style="float: left; margin-left: -15px; position: relative; top: 30px; z-index: 789;">@Localization.GetText("OP.FD.TabOperationLevel.Accumulated")</h4>
                <h4 style="float: left; margin-left: 160px; position: relative; top: 30px; z-index: 789;">@Localization.GetText("OP.FD.TabOperationLevel.FinancialSummary")</h4>
            </div>
            <div style="float: left; width: 450px; height: 350px; margin-top: 40px;">
                <div class="splineChartOriginal" style="width: 450px; height: 350px;"></div>
            </div>
            <div style="float: left; width: 500px; height: 350px; margin-top: 40px;">
                <div class="barChartCurrent" style="width: 500px; height: 350px;"></div>
            </div>
            <div style="width: 950px; height: 50px;">
                <h4 style="float: left; margin-left: 150px; position: relative; top: 30px; z-index: 789;">@Localization.GetText("OP.FD.TabOperationLevel.Original")</h4>
                <h4 style="float: left; margin-left: 422px; position: relative; top: 30px; z-index: 789;">@Localization.GetText("OP.FD.TabOperationLevel.Current")</h4>
            </div>
            <div style="float: left; width: 450px; height: 350px; margin-left: 50px;">
                <div class="jqChartOriginal" style="width: 450px; height: 350px;"></div>
            </div>
            <div style="width: 400px; height: 350px; float: left; padding-top: 27px;">
                <div class="jqChartCurrent" style="width: 400px; height: 296px;"></div>
            </div>
            <div style="width: 950px; height: 50px;">
                <h4 style="float: left; margin-left: 50px;">
                    @Localization.GetText("OP.FD.TabOperationLevel.TotalOpCost")
                    @FormatHelper.Format(Model.FinancingSource.TotalOperationOriginal, formatDecimal)
                </h4>
                <h4 style="float: left; margin-left: 200px;">
                    @Localization.GetText("OP.FD.TabOperationLevel.TotalOpCost2")
                    @FormatHelper.Format(Model.FinancingSource.TotalOperationCurrent, formatDecimal)
                </h4>
            </div>
        </div>
    </div>
}
