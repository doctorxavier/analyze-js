@model RiskMatrixViewModel

@Confluence.ModalWarning(null, "addActivityModal", new List<ModalButtonsViewModel>
{
     new ModalButtonsViewModel {
            Id = "btnAddActivityYes",
            Name ="btnAddActivityYes",
            Text = Localization.GetText("RISK.OK"),
            Type = "buttonBlue",
            CloseAtEnd = true
        }
}, title: Localization.GetText("RISK.RESPONSE.ACTION"), showDefaultCancelButton: false)

@Confluence.ModalWarning(HtmlTextHelper.ModalText("RISK.DELETE.MESSAGE"), id: "deleteWarning", buttons: new List<ModalButtonsViewModel>
