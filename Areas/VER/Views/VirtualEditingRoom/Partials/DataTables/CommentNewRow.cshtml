<div id="newCommentHidden" hidden="hidden">
    <div id="CommentUser">
        <div id="CommentUserHeader">
            <div id="userLabel" class="col-lg-2">
                @Confluence.Label(User.Identity.Name)
            </div>
            <div id="typeLabel" class="col-lg-2">
                @Confluence.Label("Type")
            </div>
            <div id="dateLabel" class="col-lg-2">
                @Confluence.Label(DateTime.Today.ToString("dd' 'MMM' 'yyyy"))
            </div>
            <div id="buttonTrash" class="col-lg-6">
                @Confluence.ButtonTrash("", "trashComment", "removeComment")
            </div>
        </div>
        <div id="CommentUserBody" class="col-lg-12 mb70">
            @Confluence.InputTextArea(String.Empty, "commentText", width: "100%", height: "80px")
        </div>
    </div>
</div>