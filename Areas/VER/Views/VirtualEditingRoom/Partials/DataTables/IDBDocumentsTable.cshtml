@using IDB.MVCControls.DataTable.Helpers
@using System.Globalization

@model List<IDB.MW.Application.OPUSModule.ViewModels.CreationFormService.OperationTeamRowViewModel>

@if (Model != null)
{
    var workingDocumentsTable = Html.RenderDataTable(Model);
    workingDocumentsTable.Name("workingDocumentsTable")
        .PrimaryKey(m => m.RowId.ToString(CultureInfo.InvariantCulture))
        .AddPrimaryKeyToName(false)
        .Columns(columns =>
        {
            columns.Template(c => Confluence.Label("BO-L1099"))
                .Header(Localization.GetText("OP.OD.TabWorkingDocuments.Table.OperationNumber"));
            columns.Template(c => Confluence.Label("POD BO-L1099"))
                .Header(Localization.GetText("OP.OD.TabWorkingDocuments.Table.DocumentName"));
            columns.Template(c => Confluence.Label("POD"))
                .Header(Localization.GetText("OP.OD.TabWorkingDocuments.Table.DocType"));
            columns.Template(c => Confluence.Label("In progress"))
                .Header(Localization.GetText("OP.OD.TabWorkingDocuments.Table.Status"));
            columns.Template(c => Confluence.Label("7/20/2015"))
                .Header(Localization.GetText("OP.OD.TabWorkingDocuments.Table.CreationDate"));
            columns.Template(c => Confluence.Label("8/12/2015"))
                .Header(Localization.GetText("OP.OD.TabWorkingDocuments.Table.DueDate"));
            columns.Template(c => Confluence.Label("Regional"))
                .Header(Localization.GetText("OP.OD.TabWorkingDocuments.Table.Country"));
            columns.Template(c => Confluence.Label("High"))
                .Header(Localization.GetText("OP.OD.TabWorkingDocuments.Table.PriorityLevel"));
        });
    workingDocumentsTable.TableClass = "tableNormal endSpacing";
}
