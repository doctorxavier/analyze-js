@using IDB.Architecture.Language

<div data-id-selector="add-form" class="row">
    <div class="col-md-12 contentDocuments">
        <form method="POST" enctype="multipart/form-data" data-id="addForm"
              action="@Url.Action("IDBDocUploadDocument", "DocumentModal", new { area = "" })">

            <p>@Localization.GetText("OP.Document.Add.Instructions")</p>
            <p>@Localization.GetText("Document.Add.Extensions")</p>

            <div class="uploadContainer mt20 mb20">
                @Confluence.InputFile("file", isMultiple: true, acceptFormats: ".pdf, .xls, .xlsx, .pst, .ppt, .pptx, .mpp, .pub, .vsd, .vss, .vst, .vdx, .vsx, .vtx, .doc, .docx, .wpd, .msg", required: false)
                <ul class="parsley-errors-list filled hide" data-name="file-error">
                    <li>@Localization.GetText("Document.Add.ExtensionError")</li>
                </ul>
                <ul class="parsley-errors-list filled hide" data-name="file-empty">
                    <li>@Localization.GetText("Document.Add.EmptyFile")</li>
                </ul>
            </div>
        </form>
    </div>
</div>

