@using IDB.Presentation.MVC4.Helpers
@model IDB.MW.Application.VERModule.ViewModels.UsersByRoleViewModel

@{
    var usersList = Model.Users != null ?
        Html.BuildSelectItemList(Model.Users,
            o => o.Text,
            o => o.Value.ToString()).ToList() :
        new List<SelectListItem>();
}

<div class="row" id="modalUserRol" data-parsley-validate="data-parsley-validate" data-parsley-excluded="[disabled]">
    <div class="col-md-12">
        @Confluence.Label(string.Format(Localization.GetText("MSG.VALIDATE.ON.BEHALF.OF.TASK"), Model.Role))
    </div>
    <div class="col-md-12 mt20">
        @Confluence.InputDropDown("", "onBehalfOf", usersList)
    </div>
</div>