@using IDB.Presentation.MVC4.Helpers
@using IDB.MW.Domain.Models.FindingRecomendations

@model IDB.MW.Domain.Models.FindingRecomendations.FindingRecommendationHeaderModel

<div class="header">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-9 mt20">
                <div>@Confluence.LabelMainSubTitle(Localization.GetText("Analyze factors or issues that affected the performance of the operation during programming, design, execution, technical supervision and/or evaluation; and propose a concrete, actionable recommendation based on a finding that, in similar circumstances, would facilitate problem solving, risk mitigation or the replication of success."))</div>
            </div>
            <div id="showFilter" class="floatRight">
                @if (ViewBag.OverallProject != false)
                {
                    @Html.Partial("Partial/ButtonsEditOverall")
                }
            </div>
        </div>
    </div>
</div>

<div class="mt10 mb10">
    <div class="col-md-12" style=" padding-right: 0;">
        <div id="showFilterOverall" data-pagemode="read" class="floatRight">
            @Confluence.ButtonBlue(Localization.GetText("Show Filter"))
        </div>

        <div id="hideFilterOverall" data-pagemode="read"  class="floatRight" style="display:none;">
            @Confluence.ButtonBlue(Localization.GetText("Hide Filter"))
        </div>
        <div class="floatRight" style=" margin-right: 8px;">
            @Confluence.ButtonColapse("OverallProjectTable", false,
                                        expandText: Localization.GetText("GLOBAL.CONTROL.EXPANDALL"),
                                        collapseText: Localization.GetText("GLOBAL.CONTROL.COLLAPSEALL"))
        </div>
    </div>

    <div id="FilterPanelOverall" data-pagemode="read" class="filterNormal mt10 col-md-12" style="display:none;">
        <div class="col-md-12">
            <div class="col-md-3">
                @Localization.GetText("PMR Cycle")
                @Confluence.InputDropDownMulti("reportingPeriodOverall", (List<MultiSelectListItem>)ViewBag.ListPmrCycle,
                                                orderAsc: false,
                                                required: false,
                                                width: "100%")
            </div>
            <div class="col-md-3">
                @Localization.GetText("Stages")
                @Confluence.InputDropDown(ViewBag.SelectStages.ToString(),
                                            "StageListOverall",
                                            ViewBag.ListStages,
                                            required: false,
                                            width: "100%")
            </div>
            <div class="col-md-3">
                @Localization.GetText("Dimensions")
                @Confluence.InputDropDown(ViewBag.SelectDimensions.ToString(),
                                            "DimensionListOverall",
                                            ViewBag.ListDimensions,
                                            required: false,
                                            width: "100%")
            </div>
            <div class="col-md-3">
                @Localization.GetText("Categories")
                @Confluence.InputDropDown(ViewBag.SelectCategories.ToString(),
                                            "CategoriesListOverall",
                                            ViewBag.ListItemsCategory,
                                            parentValue: true,
                                            required: false,
                                            width: "100%")
            </div>
        </div>
        <div class="col-md-12">
            <div class="col-md-4">
            </div>
            <div class="col-md-8">
                <div class="float-right mt10">
                    @Confluence.ButtonBlue(Localization.GetText("Clear"), action: "ClearFilterOverall")
                    @Confluence.ButtonBlue(Localization.GetText("Filter"), action: "SearchFilterOverall")
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-md-12"><br /></div>
@if (Model != null)
{
    <div>
        @Html.Partial("Partial/DataTables/OverallProjectDataTable", Model)
    </div>
}

<div class="header mt20">
    <div class="row">
        <div class="col-md-12">
            @if (ViewBag.OverallProject != false)
            {
                @Html.Partial("Partial/ButtonsEditOverall")
            }
        </div>
    </div>
</div>
