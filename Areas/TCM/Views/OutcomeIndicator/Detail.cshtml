@model IDB.MW.Domain.Models.Architecture.ResultMatrix.Outcomes.OutcomeModel
@{
    ViewBag.Title = Localization.GetText("TCM.Outcome.IndicatorDetailTitle");
}

<section class="central">
    <h2 class="hide">Seccion central de Contenido</h2>
    <div class="mod_contenido_central impacts">
        <section>
            <h3 class="headingh2 tipo1">

                <a href="@(Url.Action("Index", "Outcomes", new { area = "ResultsMatrix", operationNumber = ViewData["operationNumber"] }))" title="Impacts">@Localization.GetText("TCM.Outcomes")</a>

            </h3>
            <div class="editingButtonsEdit">
                @if (ViewBag.isEditable)
                {
                    if (Html.HasPermission("Results Matrix Write"))
                    {
                        <a href="@(Url.Action("EditDetail", "OutcomeIndicator", new { area = "ResultsMatrix", impactIndicatorId = Model.OutcomeIndicators[0].OutcomeIndicatorId }))" class="btn-primary editOutput" title="@Localization.GetText("TCM.Edit")">@Localization.GetText("TCM.Edit")</a>
                    }         
                }                
            </div>

            <div class="desheadingh3 ">
                <p class="description">@Model.Statement</p>
            </div>
        </section>
        <section>
            
            <div class="ftl w75 marginLeft4Con7">
                <h5 class="headingh4">@Model.OutcomeIndicators[0].Definition</h5>
                <fieldset>
                    <legend></legend>
                    <h5 class="headingh4" style="margin-bottom: 2em">@Localization.GetText("TCM.Outcome.IndicatorDetails")</h5>
                </fieldset>
                <div class="listWrapper">
                    <dl class="ftl w50">
                        <dt class="dataTitle">@Localization.GetText("TCM.Outcome.IndicatorDetail.MeansOfVerification")</dt>
                        <dd class="dataText">@Model.OutcomeIndicators[0].MeansOfVerification</dd>
                    </dl>
                    <dl class="ftl w45">
                        <dt class="dataTitle">@Localization.GetText("TCM.Outcome.IndicatorDetail.Observations")</dt>
                        <dd class="dataText">@Model.OutcomeIndicators[0].Observations</dd>
                    </dl>
                </div>
                <div class="listWrapper ftl marginLeft0">
                    <h5 class="">@Localization.GetText("TCM.Outcome.IndicatorDetail.GenderAndEthnicityFlags")</h5>
                    <br />
                    <dl>
                        <dt class=""> @Localization.GetText("TCM.Outcome.IndicatorDetail.GenderEthnicallyMessage")</dt>
                        <dd class="dataText custom">
                            <label class="editLabel" for="check3">
                                <input disabled="disabled" name="check3" type="checkbox" id="check3" class="hidden-field">
                                @if (Model.OutcomeIndicators[0].IsProgender)
                                {
                                    <span class="custom checkbox unableMarked">@Localization.GetText("TCM.Outcome.IndicatorDetail.ProGender")</span>
                                }
                                else
                                {
                                    <span class="custom checkbox disabled">@Localization.GetText("TCM.Outcome.IndicatorDetail.ProGender")</span>
                                }
                            </label>
                            <label class="editLabel" for="check4">
                                <input disabled="disabled" name="check3" type="checkbox" id="check4" class="hidden-field">
                                @if (Model.OutcomeIndicators[0].IsProethnicity)
                                {
                                    <span class="custom checkbox unableMarked">@Localization.GetText("TCM.Outcome.IndicatorDetail.ProEthnicity")</span>
                                }
                                else
                                {
                                    <span class="custom checkbox disabled">@Localization.GetText("TCM.Outcome.IndicatorDetail.ProEthnicity")</span>
                                }
                            </label>
                        </dd>
                    </dl>
                    <p class="contextual_help"> @Localization.GetText("TCM.Outcome.IndicatorDetail.NoteIfDisaggregated")</p>
                </div>
            </div>
          
        </section>
    </div>
</section>
