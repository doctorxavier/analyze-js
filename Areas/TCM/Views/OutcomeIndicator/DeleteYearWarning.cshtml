
<script>
    $(document).ready(function () {
        $("#lnkCancelDeleteYear").click(function () {
            $(window.parent.document).find('body').find(".ui-widget-overlay").remove();
            $(".ui-widget-overlay").remove();
            $(".k-window").remove();
        });

        $("#btnSaveDeleteYear").click(function () {
            $(window.parent.document).find('body').find(".ui-widget-overlay").remove();
            $(".ui-widget-overlay").remove();
            $(".k-window").remove();
            var urlRoute = $("#hdnDeleteYearPost").val() + "?resultsMatrixId=@ViewData["resultsMatrixId"]&impactId=@ViewData["impactId"]&year=@ViewData["year"]";
            window.location.href = urlRoute;
        });
    });
</script>

@using (Html.BeginForm("DeleteYear", "ImpactIndicator", FormMethod.Post, new { id = "indicatorDeleteYearForm" }))
{
<div class="contentImpacts">
     @Localization.GetText("TCM.DYP.DeleteYearPlan.TexDeleteAllColumns")
    <div class="titlePendingChanges">
         @Localization.GetText("TCM.DYP.DeleteYearPlan.TextWarning")
    </div>
</div>
<div class="pie pieReassign">
    <div class="botones">
        <a title="@Localization.GetText("TCM.DYP.DeleteYearPlan.Cancel")" class="cancel" id="lnkCancelDeleteYear" href="javascript:void(0)"> @Localization.GetText("TCM.DYP.DeleteYearPlan.Cancel")</a>
        <label for="delete">
            <input type="button" value=" @Localization.GetText("TCM.Save")" class="btn-primary" id="btnSaveDeleteYear">
        </label>
    </div>
</div>
}
