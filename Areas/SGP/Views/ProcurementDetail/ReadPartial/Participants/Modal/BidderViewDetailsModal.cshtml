@using System.Web.Mvc
@using IDB.Presentation.MVC4.Models.Modal
@using IDB.Presentation.MVC4.General
@using IDB.Architecture.Language

@using IDB.MW.Application.SGPModule.ViewModels.ProcurementDetail

<div class="hide">
    @Display.AddModalButton(new ModalViewModel(contentSelector: "[data-name=\"modal-view-bidder-details\"]",
            title: Localization.GetText("SGP.Label.ViewDetails"),
            type: CssClass.ModalInformationNoIcon,
            moveOriginalContent: true,
            name: "btn-open-popup-view-bidder-details",
            closeOnOverlay: false,
            allowClose: true,
            actionOnClose: "")
        .AddButton(name: "btn-common-remove-ok",
                    text: Localization.GetText("COMMON.SVQ.Back"),
                    type: CssClass.Button01,
                    callback: "",
                    closeAtEnd: true))
    
    <div data-name="modal-view-bidder-details" class="modalBody">
        <div class="row mb30">
            <div class="col-xs-3">
                @Confluence.Label(Localization.GetText("COMMON.Name"))
            </div>
            <div class="col-xs-9">
                @Confluence.LabelBold(null, dataAttributes: new Dictionary<string, string>() {{ "name","name-bidder" }})
            </div>
        </div>
        <div class="row mb30">
            <div class="col-xs-3">
                @Confluence.Label(Localization.GetText("SGP.Label.Gender"))
            </div>
            <div class="col-xs-9">
                @Confluence.LabelBold(null, dataAttributes: new Dictionary<string, string>() { { "name", "gender-bidder" } })
            </div>
        </div>
        <div class="row mb30">
            <div class="col-xs-3">
                @Confluence.Label(Localization.GetText("COMMON.SVQ.Nationality"))
            </div>
            <div class="col-xs-9">
                @Confluence.LabelBold(null, dataAttributes: new Dictionary<string, string>() { { "name", "nationality-bidder" } })
            </div>
        </div>
        <div class="row mb30">
            <div class="col-xs-3">
                @Confluence.Label(Localization.GetText("SGP.Label.EconomicSector"))
            </div>
            <div class="col-xs-9">
                @Confluence.LabelBold(null, dataAttributes: new Dictionary<string, string>() { { "name", "economicSector-bidder" } })
            </div>
        </div>
        <div class="row mb30">
            <div class="col-xs-3">
                @Confluence.Label(Localization.GetText("SGP.Label.Address"))
            </div>
            <div class="col-xs-9">
                @Confluence.LabelBold(null, dataAttributes: new Dictionary<string, string>() { { "name", "address-bidder" } })
            </div>
        </div>
        <div class="row mb30">
            <div class="col-xs-12">
                @Confluence.Label(Localization.GetText("SGP.Label.AdministrationLevelsOfBidders"), dataAttributes: new Dictionary<string, string>() { { "name", "LocationOfBidder" } }, htmlClass: "hide")
                @Confluence.Label(Localization.GetText("SGP.Label.AdministrationLevelsOfParticipants"), dataAttributes: new Dictionary<string, string>() { { "name", "LocationOfParticipant" } }, htmlClass: "hide")
            </div>
        </div>
        <div class="row">
            <div data-idb-fieldname="levels">
                <div class="col-xs-3 lblcontent">
                    @Confluence.Label(Localization.GetText("SGP.Label.Level1"))
                </div>
                <div class="col-xs-5 lblcontent">
                    @Confluence.Label(Localization.GetText("SGP.Label.Level2"))
                </div>
                <div class="col-xs-4 lblcontent">
                    @Confluence.Label(Localization.GetText("SGP.Label.Level3"))
                </div>
                <div class="col-xs-3 lblvalue">
                    @Confluence.LabelBold(null, dataAttributes: new Dictionary<string, string>() { { "name", "country-bidder" } })
                </div>
                <div class="col-xs-5 lblvalue">
                    @Confluence.LabelBold(null, dataAttributes: new Dictionary<string, string>() { { "name", "state-bidder" } })
                </div>
                <div class="col-xs-4 lblvalue">
                    @Confluence.LabelBold(null, dataAttributes: new Dictionary<string, string>() { { "name", "district-bidder" } })
                </div>
            </div>
        </div>
    </div>
 </div>

