@using IDB.Architecture.Language
@using IDB.MW.Infrastructure.Configuration

@{ var formatDate = ConfigurationServiceFactory.Current.GetApplicationSettings().FormatDate;
<tr data-id="@ViewBag.LastRow" class="custom even odd" role="row">
    <td>
        <span>
            <span data-pagemode="edit" class="">
                @Confluence.InputText("", "tableManagementCode", width: "100%", id: "tableManagementCode")
            </span>
        </span>
    </td>
 
    <td>
        <span data-pagemode="edit" class="">
            @Confluence.InputDatePicker(null, "tableManagementEffectiveDate", formatDate, false, greaterThanNameDate: "EffectiveDate", lessThanNameDate: "ExpirationDate")
        </span>
    </td>
    <td>
        <span data-pagemode="edit" class="">
            @Confluence.InputDatePicker(null, "tableManagementExpirationDate", formatDate, false, greaterThanNameDate: "EffectiveDate", lessThanNameDate: "ExpirationDate")
        </span>
    </td>
    <td>
        <span data-pagemode="edit" class="">
            @Confluence.InputDropDownAsync(null, "tableMasterdataParent", Url.Action("GetMasterDatas", "MasterDataView", new { area = "AdministrationSecondPhase", masterType = ViewBag.masterDataTypeId }), required: false,width:"100%")
        </span>
    </td>
    <td>
        <span>
            @Confluence.ButtonShowRow()
        </span>
    </td>
    <td class="hide">
        <span data-pagemode="edit" class="hide">
            <input type="hidden" name="managementId" value="0">
        </span>
    </td>


</tr>
    <tr class="template even" role="row" data-is-expanded="true" style="display:table-row;" data-last-detail="true" data-row-parent-id="@ViewBag.LastRow">
        <td class="custom-detail-table-row" colspan="9">
            <div class="row row-header">

                <div class="col-md-3">
                    <p>@Localization.GetText("OP.MD.MG.Table.SpanishName")</p>
                </div>
                <div class="col-md-3">
                    <p>@Localization.GetText("OP.MD.MG.Table.EnglishName")</p>
                </div>
                <div class="col-md-3">
                    <p>@Localization.GetText("OP.MD.MG.Table.FrenchName")</p>
                </div>
                <div class="col-md-3">
                    <p>@Localization.GetText("OP.MD.MG.Table.Portuguese")</p>
                </div>
                <div class="col-md-3">
                    <p></p>
                </div>
            </div>

            <div class="row row-body-40">
                <div data-pagemode="read" class="hide">
                    <div class="col-md-3"></div>
                    <div class="col-md-3"></div>
                    <div class="col-md-3"></div>
                    <div class="col-md-3"></div>
                    <div class="col-md-3"></div>
                </div>

                <div data-pagemode="edit">
                    <div class="col-md-3">
                        @Confluence.InputTextArea(null, "masterdataSpanishName", required: true, width:"100%",height:"150px")
                    </div>
                    <div class="col-md-3">
                        @Confluence.InputTextArea(null, "masterdataEnglishName", required: true, width: "100%", height: "150px")
                    </div>
                    <div class="col-md-3">
                        @Confluence.InputTextArea(null, "masterdataFrenchName", required: true, width: "100%", height: "150px")
                    </div>
                    <div class="col-md-3">
                        @Confluence.InputTextArea(null, "masterdataPortugueseName", required: true, width: "100%", height: "150px")
                    </div>
                    <div class="col-md-3">
                    </div>

                </div>
            </div>
        </td>
    </tr>
}
<script>
    $(document).ready(function () {

    $('#tableManagementCode').blur(function () {
        $('#tableManagementCode').parent().next().find('input').val($(this).val());
    });

    });
</script>