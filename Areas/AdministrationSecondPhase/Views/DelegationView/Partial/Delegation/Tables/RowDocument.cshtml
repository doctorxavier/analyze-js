@model IDB.MW.Application.AdministrationModule.ViewModels.Delegation.TableDocumentViewModel
           
<tr data-id="0" class="custom-even odd" role="row">

    <td>
        <span data-pagemode="edit">
            @Confluence.Label(Model.User)
        </span>
    </td>
    <td>
        <span data-pagemode="edit">
            @Confluence.LabelGetDate(Model.Date)
        </span>
    </td>
    <td>
        <span data-pagemode="edit">
            @Confluence.Label(Model.DocNumber)
        </span>
    </td>
    <td>
        <span data-pagemode="edit">
                @if (Model.Description != "")
                {
                    @Confluence.Label(Model.Description)
                    @Confluence.InputHidden(Model.Description, "Description")
                }
                else
                {
                    @Confluence.InputText(Model.Description, "Description", width: "100%")
                }
        </span>
    </td>
    <td>
        <span data-pagemode="edit">
            @{
                var secureUrl = IDB.MW.Domain.EntityHelpers.DownloadDocumentHelper.GetDocumentLink(Model.DocNumber);
            }
            <a href=@secureUrl target="_blank">@Confluence.ButtonDownload(text: "")</a>
            @Confluence.ButtonTrash(null, null, "removeRowDocument")
        </span>
    </td>
    <td class="hide">
        <span data-pagemode="edit">
            @Confluence.InputHidden("0", "DocumentId")
            @Confluence.InputHidden(Model.DocNumber, "DocNumber")
        </span>
    </td>
</tr>

