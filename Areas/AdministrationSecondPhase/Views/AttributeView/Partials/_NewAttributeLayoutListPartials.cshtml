@using IDB.MVCControls.General.Helpers

<div data-id="PageContent" name="newAttributeLayoutModalContent" data-parsley-validate="data-parsley-validate" data-parsley-excluded="[disabled]" class="modal-body mb20">
    <div class="row row-header">
        <div class="col-md-4">
        </div>
    </div>
    <div class="row row-body-50">
        <div class="col-md-12">
        </div>
    </div>
    <div class="row row-header">
        <div class="col-md-4">
            @Localization.GetText("OP.CR.CreationForm.BD.OperationType").HtmlEncode()
        </div>
        <div class="col-md-4">
            @Localization.GetText("OP.CR.RelatedOperation.RelationshipType").HtmlEncode()
        </div>
        <div class="col-md-4">
            @Localization.GetText("TCM.MC.Filter.Section").HtmlEncode()
        </div>
        <div class="col-md-4">
            @Confluence.InputDropDown(null, "OperationType", ViewBag.OperationTypeFilter, width: "80%")
        </div>
        <div class="col-md-4">
            @Confluence.InputDropDown(null, "RelationshipType", ViewBag.RelationshipTypeFilter, width: "80%", required: false)
        </div>
        <div class="col-md-4">
            @Confluence.InputDropDown(null, "Section", ViewBag.SectionFilter, width: "80%")
        </div>
    </div>

    <div class="row row-header">
        <div class="floatRight">
            @Confluence.ButtonBlue(Localization.GetText("TCM.UYP.UpdateYearPlan.Accept"), action: "newAttribute")
        </div>
    </div>
</div>

