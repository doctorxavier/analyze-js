
@{
    Layout = "~/Areas/AdministrationSecondPhase/Views/Shared/_Layout.cshtml";
}

@model IDB.MW.Application.AdministrationModule.ViewModels.VisualOutputsMapping.VisualOutputsMappingViewModel

@Styles.Render("~/Content/Modules/AdministrationSecondPhase/VisualOutputsMapping/VisualOutputsMapping.css")
@Scripts.Render("~/Scripts/AdministrationSecondPhase/VisualOutputsMapping")

@Html.Partial("Partials/VisualOutputsMappingTabContent", Model)

@section scripts{
    <script type="text/javascript">
        registerCallback(function () {
            $(document).ready(function () {
                VOMDownload.loadOnDocumentReadyFunction();
                VOMDownload.applyFilterURL =
                    '@Url.Action("ApplyFilterDownloadSection", "VisualOutputsMapping", new { area = "AdministrationSecondPhase" })';
                VOMDownload.downloadRootPage =
                    '@Url.Action("Index", "VisualOutputsMapping", new { area = "AdministrationSecondPhase" })';
                VOMDownload.emptyResultsMessage =
                    '@Localization.GetText("TCM.MC.ChangesEmptyTable")';
                VOMDownload.downloadExcel =
                    '@Url.Action("ExportExcelVOM", "VisualOutputsMappingDocument", new { area = "AdministrationSecondPhase" })';
                VOMDownload.popUpBody = '@Localization.GetText("VOM.PopUpBody")';
                VOMDownload.popUpTitle = '@Localization.GetText("VOM.PopUpTitle")';
                VOMDownload.notSelectedOperation = '@Localization.GetText("VOM.NotSelectedOperation")';
                VOMDownload.continueText = '@Localization.GetText("Continue")';
                VOMLoad.urlForFileLoad =
                    '@Url.Action("ImportExcelVOM", "VisualOutputsMapping", new { area = "AdministrationSecondPhase" })';
                VOMLoad.urlForSaveData =
                        '@Url.Action("SaveExcelVOM", "VisualOutputsMappingDocument", new { area = "AdministrationSecondPhase" })';
                VOMLoad.downloadSelectedOperationValidationLogsURL =
                    '@Url.Action("GetOperationChangesLog", "VisualOutputsMapping", new { area = "AdministrationSecondPhase" })';
                VOMLoad.inputFileButtonFileSelection();
                VOMDownload.downloadLogsButtonClick();
                VOMDownload.downloadLoadLogsButtonClick();
                VOMLoad.downloadSelectedOperationValidationLogs();
                VOMDownload.downloadLogsExcelUrl =
                    '@Url.Action("ExportLogOfChanges", "VisualOutputsMappingDocument", new { area = "AdministrationSecondPhase" })';
                VOMDownload.downloadValidationLogs();
                VOMDownload.downloadMapLayers =
                    '@Url.Action("ExportMapLayers", "VisualOutputsMappingDocument", new { area = "AdministrationSecondPhase" })';
                VOMDownload.cancelDownloadValidationLogs();
                VOMDownload.validationDateMessageHide();
                VOMDownload.arrayMonths = new Array("Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec");
                VOMDownload.downloadLoadLogsURL =
                    '@Url.Action("ExportLogOfChangesPreSaved", "VisualOutputsMappingDocument", new { area = "AdministrationSecondPhase" })';
            });
        });
    </script>
}
